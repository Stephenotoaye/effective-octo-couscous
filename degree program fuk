  <script>
    /********************* Simple SPA + storage ***********************/
    const cta = document.getElementById('cta-start');
    const openRegister = document.getElementById('open-register');
    const pageRegister = document.getElementById('page-register');
    const pageCreatePass = document.getElementById('page-create-password');
    const pageLogin = document.getElementById('page-login');
    const pageDashboard = document.getElementById('page-dashboard');

    const show = (el)=>{ el.style.display='block'; el.scrollIntoView({behavior:'smooth'}); }
    const hide = (el)=> el.style.display='none';

    cta.addEventListener('click', ()=>{ show(pageRegister); });
    openRegister.addEventListener('click', ()=>{ show(pageRegister); });

    // move to create password
    document.getElementById('to-create-password').addEventListener('click', ()=>{
      // store temporary registration details
      const name = document.getElementById('reg-fullname').value.trim();
      const email = document.getElementById('reg-email').value.trim();
      if(!name || !email){ alert('Please fill your name and email'); return; }
      const level = document.getElementById('reg-level').value;
      const dept = document.getElementById('reg-dept').value;
      localStorage.setItem('tempReg', JSON.stringify({name,email,level,dept}));
      show(pageCreatePass);
    });

    document.getElementById('finish-register').addEventListener('click', ()=>{
      const pass = document.getElementById('new-pass').value;
      const confirm = document.getElementById('confirm-pass').value;
      if(pass.length < 6){ alert('Password should be at least 6 characters'); return; }
      if(pass !== confirm){ alert('Passwords do not match'); return; }
      const temp = JSON.parse(localStorage.getItem('tempReg') || '{}');
      if(!temp.name){ alert('No registration in progress'); return; }
      // Save user
      const users = JSON.parse(localStorage.getItem('fup_users') || '[]');
      // check if email/name exists
      if(users.some(u=>u.email===temp.email || u.name.toLowerCase()===temp.name.toLowerCase())){ alert('User already exists. Try logging in.'); return; }
      users.push({id:Date.now(),name:temp.name,email:temp.email,level:temp.level,dept:temp.dept,password:pass});
      localStorage.setItem('fup_users', JSON.stringify(users));
      localStorage.removeItem('tempReg');
      alert('Registration successful! You can now login.');
      show(pageLogin);
    });

    // open login from register
    document.getElementById('open-login-from-register').addEventListener('click', ()=>{ show(pageLogin); });
    document.getElementById('open-register-from-login').addEventListener('click', ()=>{ show(pageRegister); });

    // login
    document.getElementById('do-login').addEventListener('click', ()=>{
      const id = document.getElementById('login-identifier').value.trim();
      const pass = document.getElementById('login-password').value;
      const users = JSON.parse(localStorage.getItem('fup_users') || '[]');
      const user = users.find(u=> (u.email===id || u.name.toLowerCase()===id.toLowerCase()) && u.password===pass);
      const msg = document.getElementById('login-msg');
      if(!user){ msg.style.display='block'; msg.textContent='Invalid credentials'; return; }
      msg.style.display='none';
      localStorage.setItem('fup_current', JSON.stringify(user));
      enterDashboard(user);
    });

    function enterDashboard(user){
      hide(pageRegister); hide(pageCreatePass); hide(pageLogin);
      show(pageDashboard);
      document.getElementById('user-firstname').textContent = user.name.split(' ')[0] || user.name;
      loadPosts(); loadMyPosts();
    }

    // Navigation inside dashboard
    document.querySelectorAll('.nav-btn').forEach(b=>b.addEventListener('click', (e)=>{
      const view = e.currentTarget.dataset.view;
      document.querySelectorAll('.nav-btn').forEach(n=>n.classList.remove('active'));
      e.currentTarget.classList.add('active');
      document.querySelectorAll('.view-panel').forEach(v=>v.style.display='none');
      if(view==='browse') document.getElementById('browse').style.display='block';
      if(view==='upload') document.getElementById('upload').style.display='block';
      if(view==='my-posts') document.getElementById('my-posts').style.display='block';
      if(view==='logout') { localStorage.removeItem('fup_current'); location.reload(); }
    }));

    // Posts storage and rendering
    function loadPosts(){
      const postsDiv = document.getElementById('posts-sample');
      postsDiv.innerHTML='';
      const all = JSON.parse(localStorage.getItem('fup_posts') || '[]');
      const filterLevel = document.getElementById('filter-level').value;
      const filterDept = document.getElementById('filter-dept').value;
      const filterYear = document.getElementById('filter-year').value;
      const filtered = all.filter(p=> (filterLevel? p.level===filterLevel:true) && (filterDept? p.dept===filterDept:true) && (filterYear? p.year===filterYear:true));
      if(filtered.length===0) postsDiv.innerHTML='<p style="color:var(--muted)">No posts yet. Be the first to post!</p>';
      filtered.reverse().forEach(p=>{
        const el = document.createElement('div'); el.className='post';
        let media = '';
        if(p.fileData){
          if(p.fileType && p.fileType.includes('image')) media = `<img src="${p.fileData}" alt="post" />`;
          else media = `<div style="padding:18px;background:#f3f9ff;border-radius:8px;text-align:center">PDF attached - <a href='${p.fileData}' target='_blank' download>Download</a></div>`;
        }
        el.innerHTML = `${media}<h4 style="margin:8px 0 6px">${escapeHtml(p.title)}</h4><small>${p.level} • ${p.dept} • ${p.year}</small><p style="margin-top:8px;color:var(--muted)">${escapeHtml(p.desc||'')}</p>`;
        postsDiv.appendChild(el);
      });
    }

    // filters
    document.getElementById('filter-level').addEventListener('change', loadPosts);
    document.getElementById('filter-dept').addEventListener('change', loadPosts);
    document.getElementById('filter-year').addEventListener('change', loadPosts);

    // Submit post
    document.getElementById('submit-post').addEventListener('click', ()=>{
      const current = JSON.parse(localStorage.getItem('fup_current') || 'null');
      if(!current){ alert('Please login to post'); return; }
      const title = document.getElementById('post-title').value.trim();
      const level = document.getElementById('post-level').value;
      const dept = document.getElementById('post-dept').value;
      const year = document.getElementById('post-year').value;
      const desc = document.getElementById('post-desc').value.trim();
      const file = document.getElementById('post-file').files[0];
      if(!title){ alert('Please add a title'); return; }
      const reader = new FileReader();
      reader.onload = function(e){
        const data = e.target.result;
        const posts = JSON.parse(localStorage.getItem('fup_posts') || '[]');
        const post = {id:Date.now(),userId:current.id,title,level,dept,year,desc,fileData:data,fileType:file?file.type:null,ownerName:current.name};
        posts.push(post);
        localStorage.setItem('fup_posts', JSON.stringify(posts));
        document.getElementById('post-msg').style.display='block';
        document.getElementById('post-msg').textContent='Post uploaded successfully';
        document.getElementById('post-form').reset();
        loadPosts(); loadMyPosts();
        setTimeout(()=>{ document.getElementById('post-msg').style.display='none'; },2500);
      }
      if(file) reader.readAsDataURL(file);
      else { // no file
        const posts = JSON.parse(localStorage.getItem('fup_posts') || '[]');
        const post = {id:Date.now(),userId:current.id,title,level,dept,year,desc,fileData:null,fileType:null,ownerName:current.name};
        posts.push(post);
        localStorage.setItem('fup_posts', JSON.stringify(posts));
        document.getElementById('post-msg').style.display='block';
        document.getElementById('post-msg').textContent='Post uploaded successfully';
        document.getElementById('post-form').reset();
        loadPosts(); loadMyPosts();
        setTimeout(()=>{ document.getElementById('post-msg').style.display='none'; },2500);
      }
    });

    function loadMyPosts(){
      const cur = JSON.parse(localStorage.getItem('fup_current') || 'null');
      const myDiv = document.getElementById('my-posts-list');
      myDiv.innerHTML='';
      if(!cur) { myDiv.innerHTML='<p style="color:var(--muted)">Please login to view your posts.</p>'; return; }
      const posts = JSON.parse(localStorage.getItem('fup_posts') || '[]').filter(p=>p.userId===cur.id).reverse();
      if(posts.length===0) myDiv.innerHTML='<p style="color:var(--muted)">You have not posted anything yet.</p>';
      posts.forEach(p=>{
        const el = document.createElement('div'); el.className='post';
        let media = '';
        if(p.fileData){
          if(p.fileType && p.fileType.includes('image')) media = `<img src="${p.fileData}" alt="post" />`;
          else media = `<div style="padding:18px;background:#f3f9ff;border-radius:8px;text-align:center">PDF attached - <a href='${p.fileData}' target='_blank' download>Download</a></div>`;
        }
        el.innerHTML = `${media}<h4 style="margin:8px 0 6px">${escapeHtml(p.title)}</h4><small>${p.level} • ${p.dept} • ${p.year}</small><p style="margin-top:8px;color:var(--muted)">${escapeHtml(p.desc||'')}</p>`;
        myDiv.appendChild(el);
      });
    }

    // XSS escape
    function escapeHtml(str){ if(!str) return ''; return str.replace(/[&<>"']/g, function(m){ return {'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":"&#39;"}[m]; }); }

    // Testimonials auto-rotate
    (function rotateTestimonials(){
      const slides = Array.from(document.querySelectorAll('.test-slide'));
      let i=0; setInterval(()=>{
        slides.forEach(s=>{ s.style.opacity='0'; s.style.transform='translateY(12px)'; });
        slides[i].style.opacity='1'; slides[i].style.transform='translateY(0)';
        i = (i+1) % slides.length;
      },3500);
    })();

    // Load any existing logged in user
    (function init(){
      const cur = JSON.parse(localStorage.getItem('fup_current') || 'null');
      if(cur) enterDashboard(cur);
      else { /* show landing */ }
      loadPosts();
    })();

    // small helper: auto-open registration on pressing Get Started in header
    document.getElementById('open-register').addEventListener('click', ()=>{ show(pageRegister); });

  </script>
</body>
</html>
